<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <h2 class="text-center mb-4"><%= t('.title') %></h2>

        <%= f.label :email, class: 'form-label' %>
        <%= f.email_field :email, class: 'form-control', autocomplete: 'email', autofocus: true %>

        <%= f.label :password, class: 'form-label' %>
        <%= f.password_field :password, class: 'form-control', autocomplete: 'current-password' %>

        <% if devise_mapping.rememberable? -%>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: 'form-check-label' %>
        <% end -%>

        <%= f.submit t('.login_btn'), class: 'btn btn-primary btn-block mt-4' %>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>